<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales de la aplicación -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo específico para la actividad principal en Wear OS -->
    <style name="MainActivityTheme.Starting" parent="Theme.MaterialComponents.DayNight">
        <!-- Fondo de la actividad -->
        <item name="android:windowBackground">@color/your_background_color</item>
        <!-- Color del texto principal -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Color de acento -->
        <item name="android:colorAccent">@color/your_accent_color</item>
        <!-- Personaliza más elementos si es necesario -->
    </style>
</resources>
